<div class="login">
  <div class="row">
    <div class="col-sm-5">
      <div class="left-side">
        <div class="home-link">
          <%= link_to 'Sports Hub', home_url %>
        </div>
        <div class="img-wrap">
          <%= image_tag('/assets/login.png') %>
        </div>
      </div>
    </div>
    <div class="col-sm-7">
      <div class="right-side">
        <div class="register-wrap">
          <%= link_to 'Donâ€™t have an account?', register_path, class: 'register' %>
          <%= link_to 'Get Started', register_path, class: 'get-started' %>
        </div>
        <div class="form">
          <div class="form-label">Log in to Sports Hub</div>
          <div class="socials">
            <div class="facebook">
              <a href="#">
                <%= image_tag('/assets/fb.png') %>
              </a>
            </div>
            <div class="google">
              <a href="#">
                <%= image_tag('/assets/fb.png') %>
              </a>
            </div>
          </div>
          <% if @user && @user.errors.any? %>
            <% @user.errors.full_messages.each do |error| %>
              <div class="alert alert-danger"><%= error %></div>
            <% end %>
          <% end %>
          <%= form_for :login_form, url: '/login' do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            <%= link_to 'Forgot password', forgot_path, class: 'forgot-password' %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.submit 'LOG IN' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
