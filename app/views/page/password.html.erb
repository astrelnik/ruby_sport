<div class="login">
  <div class="row">
    <div class="col-sm-5">
      <div class="left-side">
        <div class="home-link">
          <%= link_to 'Sports Hub', home_url %>
        </div>
        <div class="img-wrap">
          <%= image_tag('/assets/login.png') %>
        </div>
      </div>
    </div>
    <div class="col-sm-7">
      <div class="right-side">
        <div class="register-wrap">
          <%= link_to 'Donâ€™t have an account?', new_user_registration_path, class: 'register' %>
          <%= link_to 'Get Started', new_user_registration_path, class: 'get-started' %>
        </div>
        <div class="form">
          <div class="form-label">Please enter your new password.</div>
          <%= form_for :login_form, url: '/login' do |f| %>
            <%= f.label :new_password %>
            <%= f.password_field :new_password %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.submit 'set new password' %>
          <% end %>
          <div class="back">
            <%= link_to 'Back to Log In', new_user_session_path  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
