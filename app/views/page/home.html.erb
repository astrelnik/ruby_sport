<div class="top-block">
  <div class="img-wrap">
    <%= image_tag('/assets/home.png') %>
    <% if (@articles) %>
      <div class="side-article-wrap">
        <% @articles.each do |article| %>
          <div class="side-article">
            <div class="art-wrap">
              <div class="publish-date">
                Published / <%= article.published_at.strftime("%d.%m.%Y")
              %>
              </div>
              <div class="title">
                <%= article.title %>
              </div>
              <div class="desc">
                <%= article.desc[0..80] %>
                <% if(article.desc.length > 80) %>
                  ...
                <% end %>
              </div>
            </div>
            <div class="block-btn">
              <%= link_to 'More', articles_show_path(article.id) %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="pagination">
        <span class="material-icons arrow-left">chevron_left</span>
        <span class="page active">01</span>
        <span class="page">02</span>
        <span class="page">03</span>
        <span class="page">04</span>
        <span class="material-icons arrow-right">chevron_right</span>
      </div>
    <% end %>
  </div>
</div>
