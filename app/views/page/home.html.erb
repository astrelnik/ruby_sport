<div class="top-block">
  <div class="img-wrap">
    <%= image_tag('/assets/home.png') %>
    <% if (@articles) %>
      <div class="side-article-wrap">
        <% @articles.each_with_index do |article, index| %>
          <div class="side-article <%= index == 0 ? 'active' : '' %>" id="article_<%= article.id %>">
            <div class="art-wrap">
              <div class="publish-date">
                <%= t 'published' %> / <%= l article.published_at, format: :long %>
              </div>
              <div class="title">
                <%= article.title %>
              </div>
              <div class="desc">
                <%= article.desc[0..80] %>
                <% if(article.desc.length > 80) %>
                  ...
                <% end %>
              </div>
            </div>
            <div class="block-btn">
              <%= link_to t('more'), article_path(article.id) %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="pagination" id="pagination">
        <span class="material-icons arrow-left">chevron_left</span>
        <% @articles.each_with_index do |article, index| %>
          <span class="page <%= index == 0 ? 'active' : '' %>" data-id="<%= article.id %>"><%=index+1 %></span>
        <% end %>
        <span class="material-icons arrow-right">chevron_right</span>
      </div>
    <% end %>
  </div>
</div>
<div class="news-block">
  <% @articles.each_with_index do |article, index| %>
    <div class="new">
      <% if(article.image) %>
        <div class="img-wrap"><%= image_tag('/uploads/' + article.image) %></div>
      <% end %>
      <div class="title"><%= article.title %></div>
      <div class="desc"><%= article.desc %></div>
      <a href="<%= article_path(article.id) %>" class="more">
        <span class="material-icons">east</span>
      </a>
    </div>
  <% end %>
</div>
<div class="separator">
  <div class="center"><%= t '.breakdown' %></div>
</div>
<div class="news-2">
  <div class="img-wrap">
    <%= image_tag('/assets/field.png') %>
  </div>
  <div class="title">Lorem ipsum dolor sit amet, consectetur</div>
</div>
