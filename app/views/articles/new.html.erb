<h2><%= t 'add_article' %></h2>
<% if @article && @article.errors.any? %>
  <% @article.errors.full_messages.each do |error| %>
    <div class="alert alert-danger"><%= error %></div>
  <% end %>
<% end %>
<%= form_for :add_article_form, url: articles_path, method: :post do |f| %>
  <%= f.label :title %>
  <%= f.text_field(:title, {:class => 'form-control'}) %>
  <br>
  <%= f.label :desc %>
  <%= f.text_area(:desc, {:class => 'form-control'}) %>
  <br>
  <%= f.label :published_at, t('publish_immediately') %>
  <%= f.check_box :published_at %>
  <br>
  <%= f.label :image, 'Image' %>
  <%= f.file_field(:image) %>
  <br>
  <%= f.label :category_id %>
  <%= f.select(:category_id, options_from_collection_for_select(@categories, 'id', 'title'), {:include_blank => true}, {:class => 'form-control'}) %>
  <br>
  <br>
  <%= f.submit(t('save'), {:class => 'btn btn-success'}) %>
<% end %>
<br>
<%= link_to t('back_to_articles'), articles_path %>
