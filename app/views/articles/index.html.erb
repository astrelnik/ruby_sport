<div class="articles">
  <%= link_to '+ ' + t('new') + ' ' + t('articles'), articles_new_path, {:class => 'add-btn'} %>
  <h2><%= t 'articles' %></h2>
  <div class="filters">
    <%= select_tag :filter,
       options_from_collection_for_select(@categories, 'id', 'title', {:selected => @category_id}),
       {prompt: t('all_categories'), :class => 'form-control', 'data-locale' => I18n.locale}
    %>
  </div>
  <% if(@articles.any?) %>
    <% @articles.each do |article| %>
      <div class="article">
        <div class="btn-group">
          <span class="material-icons dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">more_horiz</span>
          <div class="dropdown-menu">
            <%= link_to t('edit'), articles_edit_path(article.id), {:class => 'dropdown-item'} %>
            <%= link_to t('delete'), articles_delete_path(article.id), {:class => 'dropdown-item', method: :delete} %>
          </div>
        </div>
        <% if (article.image) %>
          <div class="img-wrap">
            <%= image_tag('/uploads/' + article.image) %>
          </div>
        <% end %>
        <div>
          <div class="title"><%= article.title %></div>
          <div class="desc"><%= article.desc %></div>
          <% if (article.category_title) %>
            <div class="desc"><%= t('category') + ': ' + article.category_title %></div>
          <% end %>
          <% if (article.published_at) %>
            <div class="published">
              <span class="circle"></span>
              <%= t 'published' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <br>
    There are no articles
  <% end %>
</div>
