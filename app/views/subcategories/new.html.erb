<h2>Add new Subcategory</h2>
<% if @subcategory && @subcategory.errors.any? %>
  <% @subcategory.errors.full_messages.each do |error| %>
    <div class="alert alert-danger"><%= error %></div>
  <% end %>
<% end %>
<%= form_for :add_subcategory_form, url: subcategories_add_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field(:title, {:class => 'form-control'}) %>
  <br>
  <%= f.label :desc %>
  <%= f.text_area(:desc, {:class => 'form-control'}) %>
  <br>
  <%= f.label :category_id %>
  <%= f.select(:category_id, options_from_collection_for_select(@categories, 'id', 'title'), {}, {:class => 'form-control'}) %>
  <br>
  <%= link_to 'Add Category', categories_new_path %>
  <br>
  <br>
  <%= f.submit('Save subcategory', {:class => 'btn btn-success'}) %>
<% end %>
<br>
<%= link_to 'Back to Subcategories', subcategories_path %>
