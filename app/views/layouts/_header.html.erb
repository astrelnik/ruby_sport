<header>
  <row>
    <div class="top-menu">
      <div class="logo">
        <%= link_to 'Sports Hub', home_url %>
      </div>
      <span class="search">
        <span class="material-icons">search</span>
        <input type="text" placeholder="Search by">
      </span>
      <span class="socials">
        <span class="social-label">Share</span>
        <a href="#">
          <%= image_tag('/assets/facebook.svg') %>
        </a>
        <a href="#">
          <%= image_tag('/assets/twitter.svg') %>
        </a>
        <a href="#">
          <%= image_tag('/assets/google.svg') %>
        </a>
      </span>
      <span class="profile">
        <span class="image">
            <%= image_tag('/assets/profile.svg') %>
        </span>
        <span class="username">
          <a href="<%= destroy_user_session_path %>" data-method="delete">Ivan Baloh</a>
        </span>
        <span class="material-icons">arrow_drop_down</span>
      </span>
      <span class="lang-wrap">

      <div class="btn-group">
        <span class="lang"><%= I18n.locale %></span>
        <span class="material-icons dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">arrow_drop_down</span>
        <div class="dropdown-menu">
          <% I18n.config.available_locales.each do |locale| %>
            <%= link_to locale, root_path(locale: locale), {:class => 'dropdown-item'} %>
          <% end %>
        </div>
      </div>
      </span>
    </div>
  </row>
</header>
